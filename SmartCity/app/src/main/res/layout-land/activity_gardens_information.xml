<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henallux.smartcity.GardensInformationActivity">
    <ImageView
        android:id="@+id/mainPic"
        android:layout_width="110dp"
        android:layout_height="140dp"
        android:layout_marginStart="83dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nameGarden"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:ems="10"
        android:text="Name garden"
        android:textSize="24sp"
        android:layout_above="@+id/mainPic"
        android:layout_alignStart="@+id/mainPic"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/noteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note :"
        android:layout_alignTop="@+id/nameGarden"
        android:layout_toEndOf="@+id/nameGarden" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/noteLabel"
        android:layout_alignBottom="@+id/noteLabel"
        android:layout_toEndOf="@+id/superficieLabel"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/superficieLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Superficie :"
        android:layout_alignBottom="@+id/nameGarden"
        android:layout_toEndOf="@+id/nameGarden" />

    <TextView
        android:id="@+id/superficie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/superficieLabel"
        android:layout_alignBottom="@+id/superficieLabel"
        android:layout_alignStart="@+id/note" />

    <TextView
        android:id="@+id/adressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse :"
        android:layout_alignTop="@+id/mainPic"
        android:layout_toEndOf="@+id/mainPic" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adressLabel"
        android:layout_alignBottom="@+id/adressLabel"
        android:layout_toEndOf="@+id/adressLabel"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/audioGuidBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_volume_off_black_24dp"
        android:layout_alignBottom="@+id/nameGarden"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/descrLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Description"
        android:textSize="20sp"
        android:layout_below="@+id/adressLabel"
        android:layout_toEndOf="@+id/mainPic" />

    <TextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="All the descr"
        android:layout_below="@+id/descrLabel"
        android:layout_alignStart="@+id/descrLabel"
        android:layout_alignBottom="@+id/mainPic"
        android:layout_alignEnd="@+id/superficie" />
</RelativeLayout>