<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.henallux.smartcity.View.MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/jardins_a_theme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/log_in"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/enterAsGuest"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/enterAsGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_as_guest"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>