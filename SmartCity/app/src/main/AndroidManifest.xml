<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.henallux.smartcity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/loginActivityLabel"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/registrationActivityLabel"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.henallux.smartcity.HomeActivity" />
        </activity>
        <activity
            android:name=".GardensActivity"
            android:label="@string/gardensActivityName"
            android:parentActivityName=".HomeActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD_nlRp5JKykNjDJ2YyZgkO5fwhKjJZjoUs" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENCIES"
            android:value="barcode" />

        <activity
            android:name=".ScanActivity"
            android:label="@string/scannerActivityLabel">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.henallux.smartcity.HomeActivity" />
        </activity>
        <activity
            android:name=".GardensInformationActivity"
            android:label="@string/infosLabelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.henallux.smartcity.GardensActivity" />
        </activity>
        <activity
            android:name=".PlantInformationActivity"
            android:label="@string/infosLabelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.henallux.smartcity.ScanActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ContactActivity"
            android:label="@string/gardensActivityName"
            android:parentActivityName=".HomeActivity" />

        <activity android:name=".UserProfileActivity"
            android:label="@string/profileActivityName"
            android:parentActivityName=".HomeActivity" />
    </application>

</manifest>